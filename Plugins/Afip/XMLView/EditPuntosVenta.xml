<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <group name="basic" numcolumns="12">

            <column name="codpv" order="110" numcolumns="6">
                <widget type="number" decimal="0" fieldname="codpv"/>
            </column>
              <column name="idempresa" titleurl="ListEmpresa" numcolumns="3" order="120">
                <widget type="select" fieldname="idempresa" icon="fas fa-building" onclick="EditEmpresa" required="true" readonly="dinamic">
                    <values source="empresas" fieldcode="idempresa" fieldtitle="nombrecorto" />
                </widget>
            </column>
            <column name="descripcion" numcolumns="6" order="120">
                <widget type="text" fieldname="descripcion"/>
            </column>
            <column name="tipo" numcolumns="6" order="120">
                <widget type="select" fieldname="tipo" required="true">
                    <values title="manual">1</values>
                    <values title="electronica">2</values>
                    <values title="web">3</values>
                </widget>
            </column>
        </group>

    </columns>
</view>
