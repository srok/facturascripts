<view>
    <modals>
        <group name="import-suppliers" title="import-suppliers" icon="fas fa-file-import">
            <column name="file" numcolumns="12" order="100">
                <widget type="file" fieldname="suppliersfile" accept=".csv,.xls,.xlsx" required="true" />
            </column>
            <column name="import-mode" numcolumns="12" order="110">
                <widget type="select" fieldname="mode" translate="true" required="true">
                    <values title="only-insert">insert</values>
                    <values title="insert-update">update</values>
                    <values title="advanced">advanced</values>
                </widget>
            </column>
        </group>
    </modals>
</view>
